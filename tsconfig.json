{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "#pages/*": ["./src/pages/*"],
      "#styles/*": ["./src/styles/*"],
      "#components/*": ["./src/components/*"],
      "#utils/*": ["./src/utils/*"],
      "#assets/*": ["./src/assets/*"],
      "#constants/*": ["./src/constants/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".eslintrc.js", "next.config.js", "next-i18next.config.js"],
  "exclude": ["node_modules"]
}
